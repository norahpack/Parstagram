<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_pastel"
    android:outlineProvider="paddedBounds"
    tools:context=".ChooseProfile">

    <RadioGroup
        android:id="@+id/choiceList"
        android:layout_width="140dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/slight_rounded_corners"
        android:backgroundTint="@color/white"
        android:checkedButton="@id/rbIcon"
        android:contextClickable="false"
        android:divider="?android:attr/listDivider"
        android:showDividers="middle|beginning|end"
        app:layout_constraintBottom_toTopOf="@+id/btnUpdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">

        <RadioButton
            android:id="@+id/rbIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_weight="1"
            android:buttonTint="@color/pink"
            android:contextClickable="false"
            android:drawableLeft="@mipmap/ic_icon_foreground"
            android:foregroundGravity="right" />

        <RadioButton
            android:id="@+id/rbDog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:buttonTint="@color/pink"
            android:drawableLeft="@drawable/ic_dog"
            android:tag="R.drawable.ic_dog" />

        <RadioButton
            android:id="@+id/rbCat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:buttonTint="@color/pink"
            android:drawableStart="@drawable/ic_yellow_tiger_cat2"
            android:tag="R.drawable.ic_yellow_tiger_cat2" />

        <RadioButton
            android:id="@+id/rbBurger"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:buttonTint="@color/pink"
            android:drawableLeft="@drawable/ic_burger"
            android:tag="R.drawable.ic_burger" />

        <RadioButton
            android:id="@+id/rbBasketball"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:buttonTint="@color/pink"
            android:drawableLeft="@drawable/ic_basketball"
            android:tag="R.drawable.ic_basketball" />


    </RadioGroup>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:background="@drawable/slight_rounded_corners"
        android:text="Set Profile Picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Update your profile Picture"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>